<h2>Publisher Details</h2>
<table class="horizontal">
  <tr>
    <th scope="row">Name</th>
    <td><%= @publisher.name %></td>
  </tr>
  <tr>
    <th scope="row">Address</th>
    <td><%= @publisher.address %></td>
  </tr>
  <tr>
    <th scope="row">Email</th>
    <td><%= @publisher.email %></td>
  </tr>
  <tr>
    <th scope="row">Phone Number</th>
    <td><%= @publisher.phone_number %></td>
  </tr>
  <tr>
    <td><a href="/publishers/<%= @publisher.id %>/edit">Edit Details</a></td>
    <td>
      <form action="/publishers/<%= @publisher.id %>/delete" method="post">
        <input type="submit" value="Delete Publisher">
      </form>
    </td>
  </tr>
</table>
<h3>Published by <%= @publisher.name %></h3>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Genre</th>
    <th>Price (Markup)</th>
    <th>Stock</th>
    <th>Copies Sold</th>
  </tr>
  <% @books.each do |book|%>
    <tr>
      <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
      <td><a href="/authors/<%= book.author_id %>"><%= book.author().print_name %></a></td>
      <td><%= book.genre %></td>
      <td><%= book.print_sell_price() %> (+<%= book.print_markup() %>)</td>
      <td><%= book.stock_count %></td>
      <td><%= book.copies_sold %></td>
    </tr>
  <% end %>
</table>