<div class="subheader">
  <h2>New Author</h2>
</div>

<form action="/authors" method="post">
  <table class="horizontal">
    <tr>
      <th scope="row"><label for="first-name">First Name</label></th>
      <td><input type="text" name="first_name" id="first-name" required></td>
    </tr>
    <tr>
      <th scope="row"><label for="last-name">Last Name</label></th>
      <td><input type="text" name="last_name" id="last-name" required></td>
    </tr>
  </table>
  <input class="btn" type="submit" value="Create Author">
</form>